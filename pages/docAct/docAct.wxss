page {
  background-color: #f7f7f7;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.doc-box {
  width: 100%;
}
.nav-box {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.nav-box text {
  display: flex;
  justify-content: center;
  align-items: center;
}
.button-box {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
}
.bottom {
  left: 0;
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
}

.choose-box {
  width: 750rpx;
  position: absolute;
  bottom: 100rpx;
  background-color: #f7f7f7;
}

.color-box {
  width: 375rpx;
  margin: 40rpx auto;
}

slider {
  margin: 40rpx 60rpx;
}

.switch-box {
  text-align: center;
  color: #666;
}

.choose-box-flex {
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  position: absolute;
  bottom: 100rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

.choose-img {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
  background: white;
}
.list-item {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0;
  border-radius: 50%;
}
.list-item image,
.choose-img image {
  width: 100%;
  height: 100%;
}
.vhallDoc {
  width: 100vw;
  /* height: 100vw/3; */
}
.vhallDocBox {
  width: 100vw;
  height: 75vw;
}
